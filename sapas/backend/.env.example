# ============================================================
# SAPAS 后端环境配置示例
# ============================================================

# 应用配置
APP_NAME=SAPAS
APP_ENV=development
DEBUG=true
SECRET_KEY=sapas-secret-key-change-in-production

# 服务配置
HOST=0.0.0.0
PORT=8082

# 数据网关配置
DATA_GATEWAY_URL=http://localhost:8001

# 数据库配置 (SAPAS 独立数据库)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/sapas_db
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/sapas_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_MESSAGE_QUEUE=sapas:queue

# JWT 配置
JWT_SECRET_KEY=sapas-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24小时

# CORS 配置
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/sapas.log

# WebSocket 配置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# 选股配置
SCREENER_MAX_RESULTS=1000

# 预警配置
ALERT_CHECK_INTERVAL=60  # 秒
ALERT_MAX_RULES_PER_USER=50

# 回测配置
BACKTEST_MAX_TRADES=10000
BACKTEST_MAX_PERIODS=10
